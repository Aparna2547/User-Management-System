                        <a href="/admin/newUser" class="btn btn-primary">Add new user</a>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <form class="search-box d-flex">
                            <input type="text" name="search" class="form-control d-inline" placeholder="Enter the name">
                            <button class="btn btn-light d-inline" type="submit">Search</button>
                        </form>
                    </div>



                </div>
            </div>
           <h6 class="text-center text-danger">
                <%=locals.context?context:" "%>
           </h6>

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</i></th>
                        <th>Email</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    <% if(users.length>0){
                        for(let i=0;i<users.length;i++){ %>
                            <tr>
                                <td>
                                    <%= users[i].name %>
                                </td>
                                <td>
                                    <%= users[i].email %>
                                </td>
                                <td><a class="btn btn-primary btn-sm" href="/admin/editUser?id=<%= users[i]._id %>">Edit</a>
                            <a href="/admin/deleteUser?id=<%=users[i]._id%>" onclick="return confirm('Are you want to delete')" class="btn btn-primary btn-sm">Delete</a></td>
                            </tr>
                            <% } }else{ %>
                                <tr>
                                    <td colspan="5">User not Found</td>
                                </tr>
                            <% } %>


                </tbody>
            </table>
        </div>


